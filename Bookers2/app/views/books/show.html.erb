<div class="container mt-4">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>

      <h2>New book</h2>
      <%= form_with model: @book,local:true do |f| %>
        <div class="form-group">
          <%= f.label :title,'Title' %><br />
          <%= f.text_field:title, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body,'Opinion' %><br />
          <%= f.text_area :body, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book',class:"btn btn-outline-success" %>
        </div>
      <% end %>
    </div>

    <div class="col-8 ml-auto">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td></td>
            <td>
              <%= link_to book_path(@book_show.id) do %>
                <%= @book_show.title %>
              <% end %>
            </td>
            <td><%= @book_show.body %></td>
            <% if @book_show.user == current_user %>
              <td><%= link_to "Edit",edit_book_path(@book_show.id),class:"btn btn-outline-success btn-sm" %></td>
              <td><%= link_to "Destroy",book_path(@book_show.id),method: :delete,class:"btn btn-outline-danger btn-sm" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
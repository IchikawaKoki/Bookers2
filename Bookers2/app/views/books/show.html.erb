<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/left_bar',user: @book_show.user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @book_show.user, :profile_image,size: "40x40", fallback: "no_image.jpg" %><br />
              <%= link_to user_path(@book_show.user.id) do %>
                <%= @book_show.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book_show.id) do %>
                <%= @book_show.title %>
              <% end %>
            </td>
            <td><%= @book_show.body %></td>
            <% if @book_show.user == current_user %>
              <td><%= link_to "Edit",edit_book_path(@book_show.id),class:"btn btn-outline-success btn-sm" %></td>
              <td><%= link_to "Destroy",book_path(@book_show.id),method: :delete,class:"btn btn-outline-danger btn-sm","data-confirm"=>"Are you sure?" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container mt-4">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
      <%= attachment_image_tag @book_show.user,:profile_image,size: "100x100",fallback: "no_image.jpg"%>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @book_show.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book_show.user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@book_show.user.id),class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
      <h2 class="mt-4">New book</h2>
      <%= form_with model: @book,local:true do |f| %>
        <div class="form-group">
          <%= f.label :title,'Title' %><br />
          <%= f.text_field:title, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body,'Opinion' %><br />
          <%= f.text_area :body, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book',class:"btn btn-outline-success" %>
        </div>
      <% end %>
    </div>

    <div class="col-8 ml-auto">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @book_show.user, :profile_image,size: "40x40", fallback: "no_image.jpg" %><br />
              <%= link_to user_path(@book_show.user.id) do %>
                <%= @book_show.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book_show.id) do %>
                <%= @book_show.title %>
              <% end %>
            </td>
            <td><%= @book_show.body %></td>
            <% if @book_show.user == current_user %>
              <td><%= link_to "Edit",edit_book_path(@book_show.id),class:"btn btn-outline-success btn-sm" %></td>
              <td><%= link_to "Destroy",book_path(@book_show.id),method: :delete,class:"btn btn-outline-danger btn-sm","data-confirm"=>"Are you sure?" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container mt-4">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user,:profile_image,size: "100x100",fallback: "no_image.jpg"%>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <h2 class="mt-4">New book</h2>
      <%= form_with model: @book,local:true do |f| %>
        <div class="form-group">
          <%= f.label :title,'Title' %><br />
          <%= f.text_field:title, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body,'Opinion' %><br />
          <%= f.text_area:body, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book',class:"btn btn-outline-success" %>
        </div>
      <% end %>
    </div>
    <div class="col-8 ml-auto">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @user.books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag book.user, :profile_image,size: "40x40", fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
              <th colspan="3"></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
